{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "noStrictGenericChecks": false,
    "lib": ["esnext"],
    "paths": {
      "shared/*": ["../shared/*"]
    }
  },
  "include": ["src/**/*.ts"]
}

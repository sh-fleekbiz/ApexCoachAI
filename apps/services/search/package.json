{
  "name": "search",
  "version": "1.0.0",
  "description": "AI search service",
  "private": true,
  "type": "module",
  "exports": "./src/app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "fastify start -l info dist/app.js",
    "test": "pnpm run build && tsc -p test/tsconfig.json && c8 tsx --test \"test/**/*.ts\"",
    "build": "tsc",
    "watch": "tsc -w",
    "dev": "pnpm run build && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"pnpm:watch\" \"pnpm:dev:start\"",
    "dev:start": "fastify start --pretty-logs --ignore-watch=.ts$ -w -l debug dist/app.js",
    "seed": "tsx src/db/seed-comprehensive.ts",
    "seed:default": "tsx src/db/seed.ts",
    "docker:build": "docker build --tag api --file ./Dockerfile ../..",
    "docker:run": "docker run --rm --publish 3000:3000 --env-file ../../.env api",
    "clean": "rimraf dist *.tgz"
  },
  "dependencies": {
    "@azure/core-http": "^3.0.5",
    "@azure/identity": "^4.13.0",
    "@azure/storage-blob": "^12.29.1",
    "@dqbd/tiktoken": "^1.0.22",
    "@fastify/autoload": "^6.3.1",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/sensible": "^6.0.3",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/type-provider-json-schema-to-ts": "^5.0.0",
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "fastify-cli": "^7.4.1",
    "fastify-plugin": "^5.1.0",
    "fastify-sse-v2": "^4.2.1",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^7.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "concurrently": "^9.2.1",
    "fastify-tsconfig": "^3.0.0",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
